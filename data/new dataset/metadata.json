  "usage_guidelines": {
    "recommended_splits": {
      "time_based": {
        "method": "chronological_split",
        "train_ratio": 0.8,
        "test_ratio": 0.2,
        "description": "Sort by tgl_pelayanan, take first 80% as train",
        "advantage": "Most realistic for deployment"
      },
      "stratified": {
        "method": "stratified_split",
        "stratify_by": "fraud_flag",
        "train_ratio": 0.8,
        "test_ratio": 0.2,
        "description": "Maintain fraud ratio in both splits"
      },
      "rolling_window": {
        "method": "temporal_validation",
        "description": "Train on months 1-N, test on month N+1",
        "use_case": "Time-series model validation"
      }
    },
    
    "ml_tasks": [
      {
        "task": "binary_classification",
        "target": "fraud_flag",
        "classes": [0, 1],
        "imbalance_handling": ["SMOTE", "class_weights", "focal_loss"]
      },
      {
        "task": "multi_class_classification",
        "target": "fraud_type",
        "classes": 11,
        "note": "Exclude 'none' class or treat as separate binary task first"
      },
      {
        "task": "anomaly_detection",
        "approach": ["Isolation Forest", "One-Class SVM", "Autoencoder"],
        "unsupervised": true
      },
      {
        "task": "graph_analysis",
        "entities": ["participants", "providers", "facilities"],
        "relationships": ["claims", "referrals"],
        "methods": ["GNN", "PageRank", "Community Detection"]
      },
      {
        "task": "time_series_analysis",
        "temporal_features": ["claim_month", "claim_quarter", "time_diff_prev_claim", "rolling_avg_cost_30d"],
        "methods": ["LSTM", "Prophet", "ARIMA"]
      }
    ],
    
    "recommended_features": {
      "base_features": [
        "age", "billed_amount", "paid_amount", "drug_cost", "procedure_cost",
        "lama_dirawat", "visit_count_30d", "claim_ratio", "drug_ratio"
      ],
      "v3_new_features": [
        "clinical_pathway_deviation_score",
        "time_diff_prev_claim",
        "provider_monthly_claims",
        "nik_hash_reuse_count",
        "rolling_avg_cost_30d"
      ],
      "derived_features": [
        "tariff_deviation = (billed_amount - tarif_inacbg) / tarif_inacbg",
        "is_weekend = dayofweek(tgl_pelayanan) >= 5",
        "age_x_cost = age * billed_amount",
        "los_x_deviation = lama_dirawat * clinical_pathway_deviation_score"
      ],
      "categorical_encoding": [
        "provinsi (11 categories)",
        "faskes_level (2 categories)",
        "jenis_pelayanan (2 categories)",
        "room_class (5 categories)",
        "kode_icd10 (9 categories)"
      ]
    },
    
    "evaluation_metrics": {
      "primary": [
        {
          "metric": "AUPRC",
          "description": "Area Under Precision-Recall Curve",
          "why": "Better for imbalanced data than AUROC"
        },
        {
          "metric": "Precision@k",
          "k_values": [100, 500, 1000],
          "description": "Precision in top-k highest risk claims",
          "why": "Matches real audit workflow"
        }
      ],
      "secondary": [
        {
          "metric": "AUROC",
          "description": "Area Under ROC Curve"
        },
        {
          "metric": "F1-Score",
          "description": "Harmonic mean of precision and recall"
        },
        {
          "metric": "Cost-based",
          "formula": "savings = TP * avg_fraud_amount - (TP + FP) * audit_cost",
          "avg_fraud_amount": 3000000,
          "audit_cost": 100000
        }
      ]
    }
  },
  
