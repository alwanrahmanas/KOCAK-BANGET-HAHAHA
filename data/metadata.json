        "formula": "drug_cost / billed_amount",
        "min": 0.0,
        "max": 1.0,
        "nullable": false
      },
      {
        "column": "procedure_ratio",
        "type": "float",
        "description": "Procedure cost as fraction of total",
        "formula": "procedure_cost / billed_amount",
        "min": 0.0,
        "max": 1.0,
        "nullable": false
      },
      {
        "column": "provider_claim_share",
        "type": "float",
        "description": "Provider's share of monthly claims",
        "formula": "provider_monthly_claims / total_monthly_claims",
